<h1>Edit Password</h1>
<%= form_with model: Current.user, url: update_password_path do |form| %>
  <%= render partial: "shared/form_error_messages", locals: { errors: form.object.errors } %>
  <div class="mb-3">
    <%= form.label :password %>
    <%= form.password_field :password, class: "form-control", placeholder: "password" %>
  </div>
  <div class="mb-3">
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation, class: "form-control", placeholder: "password" %>
  </div>
  <div class="mb-3">
    <%= form.submit "Update", class: "btn btn-primary" %>
  </div>
<% end %>
