<h1>Reset your Password</h1>
<%= form_with url: password_resets_path do |form| %>
  <div class="mb-3">
    <%= form.label :email %>
    <%= form.text_field :email, class: "form-control", placeholder: "youremail@domain.com" %>
  </div>
  <div class="mb-3">
    <%= form.submit "Send email", class: "btn btn-primary" %>
  </div>
<% end %>
