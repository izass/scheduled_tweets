<%= form_with model: tweet do |form| %>
  <%= render "shared/form_error_messages", form: form %>

  <div class="mb-3">
    <%= form.label :twitter_account_id %>
    <%= form.collection_select :twitter_account_id, Current.user.twitter_accounts, :id, :username, {}, { class: "form-control" } %>
    <%# <%= button_to "Connect twitter account", "/auth/twitter", method: :post, class: "btn btn-primary mt-3" %>
  </div>

  <div class="mb-3">
    <%= form.label :body %>
    <%= form.text_area :body, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :publish_at %>
    <div class="mb-3">
      <%= form.datetime_select :publish_at, class: "form-control" %>
    </div>
  </div>

  <%= form.button "Schedule", class: "btn btn-primary" %>
   <% if form.object.persisted? %>
    <%= link_to "Delete", form.object, method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you Sure?" }, class: "btn btn-outline-danger" %>
  <% end %>
<% end %>
